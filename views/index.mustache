{{=<% %>=}}
<!DOCTYPE html>
<html ng-app="decisions">
  <head>
    <title><%title%></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" media="screen">
    <link rel="stylesheet" href="/stylesheets/style.css" media="screen">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.slim.min.js"></script>
  </head>

  <body ng-controller="mainController">
    <div class="container">

      <img src="/images/armada.png" width="150" alt="ARMADA DE CHILE">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Toma de Decisiones</a>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="#">Home</a></li>
            </ul>
          </div>
        </div>
      </nav>

      <!-- show any messages that come back with flash -->
      <% #message %>
      <div class="alert alert-danger" role="alert">
        <strong>Error!</strong> {{ message }}.
      </div>
      <% /message %>

      <div class="jumbotron">
        <h1>¡Bienvenid@s!</h1>
        <p>Bienvenid@s al sitio de Toma de Decisiones de la Armada de Chile</p>
        <p>Actualmente en construcción.</p>
      </div>

    </div>
    <footer>
      <div class="footer-bottom">
        <div class="container">
          <p class="pull-left">Toma de Decisiones. © <a href="//www.armada.cl/">ARMADA DE CHILE 2017.</a></p>
        </div>
      </div>
    </footer>

    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.2/angular.min.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
  </body>
</html>
