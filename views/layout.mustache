{{=<% %>=}}
<!DOCTYPE html>
<html ng-app="decisions">
  <head>
    <title><%title%></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" media="screen">
    <link rel="stylesheet" href="/stylesheets/style.css" media="screen">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.2/angular.min.js"></script>
  </head>

  <body ng-controller="mainController">
    <div class="container">

      <img src="/images/armada.png" width="150" alt="ARMADA DE CHILE">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Toma de Decisiones</a>
          </div>
          <div id="navbar-collapse" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><a href="/">Home</a></li>
            </ul><% ^userEmail %>
            <ul class="nav navbar-nav">
              <li><a href="/signup">Crear usuario</a></li>
            </ul>
            <ul class="nav navbar-nav">
              <li><a href="/login">Iniciar sesion</a></li>
            </ul><% /userEmail %><% #userEmail %>
            <ul class="nav navbar-nav">
              <li><a href="/logout">Cerrar Sesión</a></li>
            </ul>
            <div class="pull-right">
              <a><% userEmail %></a>
            </div><% /userEmail %>
          </div>
        </div>
      </nav>

      <% #message %>
      <div class="col-sm-6 col-sm-offset-3">
        <!-- show any messages that come back with flash -->
        <div class="alert alert-danger" role="alert">
          <strong>Error!</strong> <% message %>.
        </div>
      </div>
      <% /message %>

<%{ yield }%>

    </div>
    <footer>
      <div class="footer-bottom">
        <div class="container">
          <p class="pull-left">Toma de Decisiones. © <a href="//www.armada.cl/">ARMADA DE CHILE 2017.</a></p>
        </div>
      </div>
    </footer>

    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
  </body>
</html>
